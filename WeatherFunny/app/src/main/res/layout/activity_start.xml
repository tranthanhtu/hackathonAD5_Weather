<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C57CF"
    tools:context="com.techkids.weatherfunny.views.activities.StartActivity">

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/tvLarge"
        android:text="Weather"
        android:textSize="40dp"
        android:textColor="@android:color/white"
        android:fontFamily="sans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvSmall"
        android:layout_centerInParent="true"
        android:layout_below="@id/tvLarge"
        android:text="by Techkids"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:fontFamily="sans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/pb_wait_load_api"
        android:layout_centerInParent="true"
        android:layout_below="@id/tvSmall"
        android:layout_width="50dp"
        android:layout_height="50dp" />



</RelativeLayout>
